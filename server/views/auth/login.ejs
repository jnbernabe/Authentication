<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Login -->

<main class="container-fluid bg-dark bg-gradient text-white">
  
   <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>


  <div class="row">
    <div class="container offset-md-2 col-md-8">
    <div class="mt-4 p-3 bg-primary text-white rounded">
      <h1 class="display-1 text-center">Please Log In</h1>
      <hr>
      </div>
      <form method="post" class="form mt-3 offset-md-3 col-md-6">
        <fieldset class="form-group ">
          <label for="username">Username</label
          ><input
            type="text"
            class="form-control "
            name="username"
            placeholder="Username"
            id="username"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password</label
          ><input
            type="password"
            class="form-control"
            name="password"
            placeholder="Password"
            id="password"
            required
            autofocus
          />
          Not Signed Up?
          <a href="/register">Register  Here</a>
        </fieldset>

        <fieldset class="container my-4 btn-group offset-4 col-2">
          <input type="submit" class="btn btn-success" value="Login" />
          <a href="/" >
            <input class="btn btn-warning" value = "Cancel"/>
        </a>
        </fieldset>
      </form>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
