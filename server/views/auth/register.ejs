<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Register -->

<main class="container-fluid bg-dark bg-gradient text-white">
  
  <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

  <div class="row">
    <div class="offset-md-1 col-md-10">
    <div class="mt-4 p-5 bg-primary text-white rounded text-center ">
      <h1 class="display-1" >Sign Up</h1>
      <hr class="bg-dark">
      </div>
      <form  method="POST" autocomplete="off" class="mt-3 offset-md-1  col-md-10 ">
        <fieldset class="form-group">
          <label for="username">Username</label
          ><input
            type="text"
            class="form-control"
            name="username"
            placeholder="Username"
            id="username"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password</label
          ><input
            type="password"
            class="form-control"
            name="password"
            placeholder="Password"
            id="password"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Email</label
          ><input
            type="email"
            class="form-control"
            name="email"
            placeholder="Email Address"
            id="email"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="name">First Name</label
          ><input
            type="text"
            class="form-control"
            name="fname"
            placeholder="First Name"
            id="fname"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="name">Last Name</label
          ><input
            type="text"
            class="form-control"
            name="lname"
            placeholder="Last Name"
            id="lname"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="phone">Phone Number</label
          ><input
            type="tel"
            class="form-control"
            name="phone"
            placeholder="Enter Phone Number"
            id="phone"
            maxlength="10"
            
            required
            autofocus
          />
        </fieldset>


        <fieldset class="container btn-group text-center my-3">
          <input type="submit" class="btn btn-success" value="Register" />
          <a href="/user-list" >
            <input class="btn btn-warning" value = "Cancel"/>
        </a>
        </fieldset>
      </form>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
